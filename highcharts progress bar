<!DOCTYPE html>
<html>
<head>
  <title>Reports by Region</title>
  <script src="https://code.highcharts.com/highcharts.js"></script>
</head>
<body>
  <div id="container" style="height: 400px; width: 600px;"></div>

  <script>
    // Sample data
    const categories = ['North', 'South', 'East', 'West'];
    const maxReports = 100; // Set max based on your use case
    const actualData = [70, 55, 90, 40];

    Highcharts.chart('container', {
      chart: {
        type: 'bar'
      },
      title: {
        text: 'Reports by Region'
      },
      xAxis: {
        categories: categories,
        title: {
          text: null
        }
      },
      yAxis: {
        min: 0,
        max: maxReports,
        title: {
          text: 'Number of Reports'
        },
        visible: false // Hide y-axis to make it cleaner
      },
      plotOptions: {
        series: {
          stacking: 'normal',
          pointPadding: 0.25,
          groupPadding: 0,
          borderWidth: 0,
          dataLabels: {
            enabled: true
          }
        }
      },
      series: [
        // Gray background bar (full length)
        {
          name: 'Total Capacity',
          data: categories.map(() => maxReports),
          color: '#e0e0e0',
          enableMouseTracking: false,
          dataLabels: {
            enabled: true,
            align: 'right',
            inside: false,
            style: {
              color: '#333',
              fontWeight: 'bold'
            },
            formatter: function () {
              return actualData[this.point.index];
            },
            x: 5
          }
        },
        // Actual value bar (foreground)
        {
          name: 'Reports',
          data: actualData,
          color: '#4CAF50',
          dataLabels: {
            enabled: true,
            inside: true,
            align: 'right',
            style: {
              color: '#fff',
              textOutline: 'none',
              fontWeight: 'bold'
            },
            formatter: function () {
              return this.y;
            }
          }
        }
      ],
      legend: {
        enabled: false
      },
      credits: {
        enabled: false
      }
    });
  </script>
</body>
</html>
